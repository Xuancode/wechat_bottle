/* pages/personal.wxss */
.personal {
  background-color: #f7f7f7;
  height: 100%;
}
.user_info {
  height: 280rpx;
  padding: 0 30rpx;
  background-color: rgb(139, 193, 243);
}
.avatar {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  overflow: hidden;
  display: inline-block;
  margin-right: 30rpx;
}
.avatar_img {
  width: 100%;
  height: 100%;
}
.text_info {
  display: inline-block;
  vertical-align: top;
  height: 180rpx;
}
.nick_name {
  display: block;
  font-weight: 600;
  font-size: 44rpx;
  margin-top: 28rpx;

}
.introduce {
  color: #666;
  font-size: 30rpx;
  margin-top: 20rpx;

}

.my_content {
  width: 90%;
  margin: 0 auto;
  background-color: #fff;
  box-shadow: 0 0 20rpx 0rpx #ccc;
  border-radius: 12rpx 12rpx;
  margin-top: -30rpx; 
  margin-bottom: 70rpx;
}
.case_li {
  /* background-color: pink; */
  padding: 30rpx 20rpx;
  border-bottom: 1px solid #eee;  
}
.case_li:last-child{
  border-bottom: none;
}
.case_li image {
  height: 40rpx;
  width: 40rpx;
  margin-right: 20rpx;
  display: inline-block;
  vertical-align: top;
}
.case_li text{
  line-height: 40rpx;
  font-size: 34rpx;

}
.arrows {
  float: right;
}