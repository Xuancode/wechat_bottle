/* pages/listDetail/listDetail.wxss */
.list_Detail {
  padding-left: 20rpx;
  padding-right: 20rpx;
  margin-bottom: 95rpx;
}
.avatar {
  width: 75rpx;
  height: 75rpx;
  border-radius: 10%;
  overflow: hidden;
  display: inline-block;

}
.avatar image {
  width: 100%;
  height: 100%
}
.user_info {
  display: inline-block;
  vertical-align: top;
  height: 75rpx;
  margin-bottom: 10rpx;
  margin-left: 6px;
}
.nick_name {
  display: block;
  font-weight: 600;
}
.single_name {
  line-height: 75rpx;
}
.introduce {
  color: #666;
  font-size: 26rpx;

}
.line {
  border-bottom: 1px solid #f5efef;
  width: 120%;
  margin-left: -10%;
  margin-bottom: 30rpx;
  margin-top: 30rpx;

}
.user_content {
  margin-top: 10rpx;
  margin-bottom: 30rpx;
}

.img_box {
  width: 100%;

}
.img_box image{
  width: 100%;
  border-radius: 1%;
  background-color: #f7f7f7;
}
.no_reply {
  text-align: center;
}
.no_reply image {
  width: 200rpx;
  height: 200rpx;
}
.reply {
  position: fixed;
  bottom: 0;
  right: 0;
  background-color: #f7f7f7;
  width: 100%;
  height: 100rpx;
  box-shadow: 0 0 5px 0 #ccc;
}
.reply image {
  position: absolute;
  left: 30%;
  bottom: 28rpx;
  width: 50rpx;
  height: 50rpx;
  z-index: 1;

}
.reply button {
  width: 60%;
  vertical-align: center;
  line-height: 80rpx;
  height: 80%;
  margin-top: 10rpx;
  text-align: left;
  padding-left: 130rpx;
  background-color: #66c0f3;
  color: #fff;
}
.reply button:active {
  background-color: #4c8eb4;
  color: #eee;
}