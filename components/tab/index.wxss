/* tab 的高度固定80rpx，不改 */
.scroll-view {
  width: 100%;
  height: 80rpx;  
  overflow: hidden;
  box-shadow: 0 5rpx 10rpx 0 #eee;
}

.tabs-wrap {
  padding-bottom: 20rpx;
}

.tabs {
  position: relative;
  height: 80rpx;
  color: #999;
  display: flex;
  text-align: center;
}
.tabs--scroll {
  white-space: nowrap !important;
  display: block !important;
}
.tabs--scroll .tabs__item {
  flex: initial !important;
  text-align: initial !important;
  display: inline-block !important;
  padding: 0 80rpx;
}
.tabs--scroll .tabs__item-child {
  display: block !important;
}
.tabs__item {
  flex: 1;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 80rpx;
  box-sizing: border-box;
  transition: color 0.3s ease-in-out;
}
.tabs__item--cur {
  color: #333333;
}
.tabs__item-child {
  display: inline-block;
}
.tabs__line {
  position: absolute;
  left: 0;
  bottom: 0;
  background-color: #66c0f3;
  height: 4rpx;
  width: 0rpx;
  display: inline-block;
}
.tabs__line.transition {
  transition: width 0.3s, transform 0.3s;
}
